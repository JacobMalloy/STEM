<Scene xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <ScrollPane hbarPolicy="NEVER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
        <VBox prefHeight="397.0" prefWidth="598.0">
            <Label alignment="CENTER" prefHeight="38.0" prefWidth="605.0" text="HELP">
                <font>
                    <Font size="26.0" />
                </font>
            </Label>
            <Accordion>
                <panes>
                    <TitledPane text="Add State">
                        <VBox alignment="CENTER">
                            <ImageView scaleX="0.8" scaleY="0.8">
                                <Image url="@/helpmenu/state.png" />
                            </ImageView>
                            <Label text="The “Add State” button toggles the ability to add states to the machine by clicking on the editing space." wrapText="true" />
                        </VBox>
                    </TitledPane>
                    <TitledPane text="Add Translation">
                        <VBox alignment="CENTER">
                            <ImageView scaleX="1.0" scaleY="1.0">
                                <Image url="@/helpmenu/transition.png" />
                            </ImageView>
                            <Label text="The “Add Transition” button toggles the ability to add transition between states of the turing machine by clicking on the nodes you want to link with the transition." wrapText="true" />
                            <ImageView scaleX="0.5" scaleY="0.5">
                                <Image url="@/helpmenu/addtransition.png" />
                            </ImageView>
